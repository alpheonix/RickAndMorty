<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetailFragment">


    <ImageView
        android:id="@+id/detail_image_imv"
        android:layout_width="match_parent"
        android:layout_height="297dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/detail_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_image_imv" />

    <TextView
        android:id="@+id/detail_status_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_name_tv" />

    <TextView
        android:id="@+id/detail_species_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_status_tv" />
    <TextView
        android:id="@+id/detail_type_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_species_tv" />
    <TextView
        android:id="@+id/detail_gender_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_type_tv" />
    <TextView
        android:id="@+id/detail_origin_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_gender_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>